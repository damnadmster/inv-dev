<% if current_user.admin? %>
<% provide(:title, 'регистрация пользователя') %>
<h1>Регистрация пользователя</h1>
<div class="row">
  <div class="col-md-2 col-md-offset-5">
    <%= form_for(@user, url: signup_path) do |f| %>

      <%= render 'shared/error_messages' %>

      <%= f.label :name, "Имя пользователя"  %>
      <%= f.text_field :name %>

      <%= f.label :email, "почта" %>
      <%= f.email_field :email %>


      <%= f.label :admin, "админ?" %>
      <%= f.check_box :admin, class: 'form-control'  %>

      <%= f.label :filial_id, "филиал" %>
      <%= select(:user, :filial_id, @fil_options) %>

      <%= f.label :right, "права" %>
      <%= f.number_field :right, class: 'form-control'  %>

      <%= f.label :password, "пароль" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "еще раз пароль" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "создать пользователя", class: "btn btn-warning" %>
    <% end %>
  </div>
</div>
<% end %>