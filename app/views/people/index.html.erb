
<h1>Материально ответственные лица</h1>
<h2 class="p-3 mb-2 bg-success text-white text-center"> всего: <%= @people.count%></h2>

<table  class="table table-bordered">
  <thead>
    <tr>
      <th>ФИО</th>
      <th>Филиал</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.FIO %></td>
        <td><%= person.filial.name %></td>
        <td><%= link_to 'Показать', person %></td>
        <td><%= link_to 'Редактировать', edit_person_path(person) %></td>
        <td><%= link_to 'Удалить', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="row">
  <div class="col-md-2 col-md-offset-5">
    <%= link_to 'Новый материально-ответственный', new_person_path, class: "btn btn-success" %>
    </div>
</div>
